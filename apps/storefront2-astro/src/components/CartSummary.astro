---
/**
 * CartSummary is rendered client-side from localStorage data.
 * This file exports the CSS classes used by the cart page script.
 */
import { css } from "../../styled-system/css";

export const cartSummaryStyles = {
  root: css({
    bg: "sand.pale",
    padding: "2.5rem",
    position: "static",
    lg: { position: "sticky", top: "7rem" },
  }),
  title: css({
    fontFamily: "display",
    fontSize: "heading.md",
    fontWeight: "regular",
    mb: "2rem",
    pb: "1.2rem",
    borderBottom: "1px solid token(colors.sand)",
  }),
  row: css({
    display: "flex",
    justifyContent: "space-between",
    alignItems: "center",
    padding: "0.7rem 0",
  }),
  rowLabel: css({
    fontSize: "0.8rem",
    letterSpacing: "tight",
    color: "espresso.soft",
  }),
  rowValue: css({
    fontSize: "0.9rem",
    color: "espresso",
  }),
  divider: css({
    height: "1px",
    bg: "sand",
    my: "1rem",
  }),
  totalRow: css({
    display: "flex",
    justifyContent: "space-between",
    alignItems: "baseline",
    pt: "1rem",
  }),
  totalLabel: css({
    fontSize: "caption",
    letterSpacing: "wider",
    textTransform: "uppercase",
    color: "espresso",
  }),
  totalValue: css({
    fontFamily: "display",
    fontSize: "heading.lg",
    color: "espresso",
  }),
  checkoutBtn: css({
    width: "100%",
    padding: "1.1rem",
    mt: "2rem",
    bg: "espresso",
    color: "sand.light",
    fontFamily: "body",
    fontSize: "0.75rem",
    letterSpacing: "widest",
    textTransform: "uppercase",
    border: "none",
    cursor: "pointer",
    position: "relative",
    overflow: "hidden",
    transition: "all 0.5s",
    _before: {
      content: '""',
      position: "absolute",
      top: "0",
      left: "-100%",
      width: "100%",
      height: "100%",
      bg: "gold",
      transition: "left 0.5s ease",
      zIndex: "0",
    },
    _hover: { _before: { left: "0" } },
    "& span": { position: "relative", zIndex: "1" },
  }),
  continueLink: css({
    display: "block",
    textAlign: "center",
    mt: "1.2rem",
    fontSize: "caption",
    letterSpacing: "wide",
    textTransform: "uppercase",
    color: "gold",
    textDecoration: "none",
    transition: "color 0.3s",
    _hover: { color: "espresso" },
  }),
  features: css({
    mt: "2rem",
    pt: "1.5rem",
    borderTop: "1px solid token(colors.sand)",
    display: "flex",
    flexDirection: "column",
    gap: "0.8rem",
  }),
  feature: css({
    display: "flex",
    alignItems: "center",
    gap: "0.8rem",
    fontSize: "0.72rem",
    letterSpacing: "tight",
    color: "espresso.soft",
    "& svg": { width: "16px", height: "16px", color: "gold", flexShrink: "0" },
  }),
  promo: css({ mt: "1.5rem" }),
  promoToggle: css({
    fontSize: "caption",
    letterSpacing: "relaxed",
    textTransform: "uppercase",
    color: "gold",
    bg: "none",
    border: "none",
    cursor: "pointer",
    fontFamily: "body",
    textDecoration: "underline",
    textUnderlineOffset: "3px",
  }),
  promoForm: css({
    display: "none",
    mt: "0.8rem",
    flexDirection: "row",
    gap: "0",
    "&.open": { display: "flex" },
  }),
  promoInput: css({
    flex: "1",
    padding: "0.7rem 1rem",
    border: "1px solid token(colors.sand)",
    borderRight: "none",
    bg: "white",
    fontFamily: "body",
    fontSize: "0.8rem",
    color: "espresso",
    outline: "none",
    _placeholder: { color: "gold.light" },
  }),
  promoApply: css({
    padding: "0.7rem 1.2rem",
    bg: "espresso",
    color: "sand.light",
    fontFamily: "body",
    fontSize: "0.65rem",
    letterSpacing: "wide",
    textTransform: "uppercase",
    border: "1px solid token(colors.espresso)",
    cursor: "pointer",
    transition: "all 0.3s",
    _hover: { bg: "gold", borderColor: "gold" },
  }),
};
---

<!-- CartSummary is rendered client-side. See cart.astro for implementation. -->
