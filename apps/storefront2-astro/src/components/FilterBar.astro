---
const categories = [
  { filter: "all", label: "All" },
  { filter: "Tote Bag", label: "Totes" },
  { filter: "Clutch", label: "Clutches" },
  { filter: "Crossbody", label: "Crossbody" },
  { filter: "Beach Bag", label: "Beach" },
  { filter: "Mini Bag", label: "Mini" },
  { filter: "Bucket Bag", label: "Bucket" },
];
---

<div class="filter-bar">
  <div class="filters-left">
    {categories.map((cat) => (
      <button
        class={`filter-btn ${cat.filter === "all" ? "active" : ""}`}
        data-filter={cat.filter}
      >
        {cat.label}
      </button>
    ))}
  </div>
  <select class="sort-select" id="sortSelect">
    <option value="featured">Sort: Featured</option>
    <option value="price-asc">Price: Low to High</option>
    <option value="price-desc">Price: High to Low</option>
    <option value="name">Name: A to Z</option>
  </select>
</div>

<style>
  .filter-bar {
    padding: 1.2rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: var(--size-container);
    margin-inline: auto;
    border-bottom: 1px solid var(--color-sand);
    flex-wrap: wrap;
    gap: 1rem;
  }

  @media (min-width: 768px) {
    .filter-bar {
      padding: 1.5rem 3rem;
    }
  }

  @media (min-width: 1024px) {
    .filter-bar {
      padding: 2rem 4rem;
      flex-wrap: nowrap;
      gap: 0;
    }
  }

  .filters-left {
    display: flex;
    gap: 0.4rem;
    flex-wrap: wrap;
  }

  @media (min-width: 768px) {
    .filters-left {
      gap: 0.5rem;
    }
  }

  .filter-btn {
    padding: 0.45rem 1rem;
    border: 1px solid var(--color-sand);
    background: transparent;
    font-family: var(--font-body);
    font-size: 0.6rem;
    letter-spacing: var(--ls-wide);
    text-transform: uppercase;
    color: var(--color-espresso-soft);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .filter-btn:hover {
    border-color: var(--color-gold);
    color: var(--color-espresso);
  }

  .filter-btn:global(.active) {
    background: var(--color-espresso);
    color: var(--color-sand-light);
    border-color: var(--color-espresso);
  }

  @media (min-width: 768px) {
    .filter-btn {
      padding: 0.55rem 1.5rem;
      font-size: var(--fs-caption);
    }
  }

  .sort-select {
    padding: 0.55rem 2.5rem 0.55rem 1.2rem;
    border: 1px solid var(--color-sand);
    background: var(--color-white);
    font-family: var(--font-body);
    font-size: var(--fs-caption);
    letter-spacing: var(--ls-normal);
    color: var(--color-espresso-soft);
    cursor: pointer;
    appearance: none;
    outline: none;
    background-image: url("data:image/svg+xml,%3Csvg width='10' height='6' viewBox='0 0 10 6' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1L5 5L9 1' stroke='%234A3228' stroke-width='1'/%3E%3C/svg%3E");
    background-repeat: no-repeat;
    background-position: right 1rem center;
  }
</style>
