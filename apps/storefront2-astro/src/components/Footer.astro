---
const shopLinks = [
  { href: "/shop", label: "All Bags" },
  { href: "/shop", label: "Totes" },
  { href: "/shop", label: "Clutches" },
  { href: "/shop", label: "Crossbody" },
];

const aboutLinks = [
  { href: "/#story", label: "Our Story" },
  { href: "#", label: "Artisans" },
  { href: "#", label: "Sustainability" },
  { href: "#", label: "Press" },
];

const helpLinks = [
  { href: "#", label: "Shipping" },
  { href: "#", label: "Returns" },
  { href: "#", label: "Care Guide" },
  { href: "#", label: "FAQ" },
];
---

<footer class="footer">
  <div class="footer__top">
    <div>
      <a href="/" class="footer__logo">Rafia<span>.</span></a>
      <p class="footer__desc">
        Artisanal raphia bags, handcrafted in Madagascar. Where tradition meets
        contemporary elegance.
      </p>
    </div>
    <div>
      <p class="footer__heading">Shop</p>
      <ul class="footer__links">
        {shopLinks.map((link) => (
          <li><a href={link.href} class="footer__link">{link.label}</a></li>
        ))}
      </ul>
    </div>
    <div>
      <p class="footer__heading">About</p>
      <ul class="footer__links">
        {aboutLinks.map((link) => (
          <li><a href={link.href} class="footer__link">{link.label}</a></li>
        ))}
      </ul>
    </div>
    <div>
      <p class="footer__heading">Help</p>
      <ul class="footer__links">
        {helpLinks.map((link) => (
          <li><a href={link.href} class="footer__link">{link.label}</a></li>
        ))}
      </ul>
    </div>
  </div>
  <div class="footer__bottom">
    <span>&copy; 2025 Rafia. All rights reserved.</span>
    <div class="footer__social">
      <a href="#" class="footer__social-link">Instagram</a>
      <a href="#" class="footer__social-link">Pinterest</a>
      <a href="#" class="footer__social-link">Facebook</a>
    </div>
  </div>
</footer>

<style>
  .footer {
    padding: 5rem 4rem 2.5rem;
    background: var(--color-espresso);
    color: var(--color-sand);
  }

  .footer__top {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
    max-width: var(--size-container);
    margin-inline: auto;
    padding-bottom: 4rem;
    border-bottom: 1px solid var(--color-border-subtle);
  }

  @media (min-width: 768px) {
    .footer__top {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (min-width: 1024px) {
    .footer__top {
      grid-template-columns: 2fr 1fr 1fr 1fr;
    }
  }

  .footer__logo {
    font-family: var(--font-display);
    font-size: var(--fs-heading-lg);
    font-weight: var(--fw-regular);
    letter-spacing: var(--ls-display);
    text-transform: uppercase;
    color: var(--color-sand-light);
    text-decoration: none;
    display: inline-block;
    margin-bottom: 1.5rem;
  }

  .footer__logo span {
    color: var(--color-gold);
  }

  .footer__desc {
    font-size: var(--fs-body-sm);
    line-height: var(--lh-relaxed);
    color: var(--color-text-on-dark-muted);
    max-width: 300px;
  }

  .footer__heading {
    font-size: var(--fs-sm);
    letter-spacing: var(--ls-editorial);
    text-transform: uppercase;
    color: var(--color-gold);
    margin-bottom: 1.5rem;
  }

  .footer__links {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }

  .footer__link {
    font-size: var(--fs-body-sm);
    color: var(--color-text-on-dark-muted);
    text-decoration: none;
    transition: color 0.3s;
  }

  .footer__link:hover {
    color: var(--color-gold);
  }

  .footer__bottom {
    max-width: var(--size-container);
    margin-inline: auto;
    margin-top: 2.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    font-size: 0.7rem;
    color: var(--color-text-on-dark-faint);
    letter-spacing: var(--ls-normal);
    text-align: center;
  }

  @media (min-width: 768px) {
    .footer__bottom {
      flex-direction: row;
      justify-content: space-between;
      gap: 0;
      text-align: left;
    }
  }

  .footer__social {
    display: flex;
    gap: 1.5rem;
  }

  .footer__social-link {
    color: var(--color-text-on-dark-faint);
    text-decoration: none;
    font-size: 0.7rem;
    letter-spacing: var(--ls-wide);
    text-transform: uppercase;
    transition: color 0.3s;
  }

  .footer__social-link:hover {
    color: var(--color-gold);
  }
</style>
