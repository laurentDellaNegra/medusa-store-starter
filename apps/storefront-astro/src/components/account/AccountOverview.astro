---
import type { HttpTypes } from '@medusajs/types'
import { convertToLocale } from '@/lib/util/money'
import { css } from 'styled-system/css'

interface Props {
  customer: HttpTypes.StoreCustomer
  orders: HttpTypes.StoreOrder[] | null
  countryCode: string
}

const { customer, orders, countryCode } = Astro.props

const linkStyle = css({
  p: '4', borderWidth: '1px', borderColor: 'border.default', borderRadius: 'md',
  textDecoration: 'none', color: 'fg.default', _hover: { bg: 'bg.muted' },
})
---

<div class={css({ display: 'flex', flexDir: 'column', gap: '8' })}>
  <div>
    <h1 class={css({ fontSize: '2xl', fontWeight: 'bold' })}>Hello {customer.first_name}</h1>
    <p class={css({ fontSize: 'sm', color: 'fg.muted', mt: '1' })}>Welcome to your account dashboard.</p>
  </div>

  <div class={css({ display: 'grid', gridTemplateColumns: { base: '1fr', md: '1fr 1fr 1fr' }, gap: '4' })}>
    <a href={`/${countryCode}/account/profile`} class={linkStyle}>
      <p class={css({ fontSize: 'sm', fontWeight: 'semibold' })}>Profile</p>
      <p class={css({ fontSize: 'xs', color: 'fg.muted', mt: '1' })}>Edit your name, email, and phone</p>
    </a>
    <a href={`/${countryCode}/account/addresses`} class={linkStyle}>
      <p class={css({ fontSize: 'sm', fontWeight: 'semibold' })}>Addresses</p>
      <p class={css({ fontSize: 'xs', color: 'fg.muted', mt: '1' })}>Manage shipping addresses</p>
    </a>
    <a href={`/${countryCode}/account/orders`} class={linkStyle}>
      <p class={css({ fontSize: 'sm', fontWeight: 'semibold' })}>Orders</p>
      <p class={css({ fontSize: 'xs', color: 'fg.muted', mt: '1' })}>View your order history</p>
    </a>
  </div>

  <div>
    <h2 class={css({ fontSize: 'lg', fontWeight: 'semibold', mb: '4' })}>Recent Orders</h2>
    {!orders || orders.length === 0 ? (
      <p class={css({ fontSize: 'sm', color: 'fg.muted' })}>You haven't placed any orders yet.</p>
    ) : (
      <div class={css({ display: 'flex', flexDir: 'column', gap: '3' })}>
        {orders.slice(0, 5).map(order => (
          <a
            href={`/${countryCode}/account/orders/${order.id}`}
            class={css({
              display: 'flex', justifyContent: 'space-between', alignItems: 'center',
              p: '4', borderWidth: '1px', borderColor: 'border.default', borderRadius: 'md',
              textDecoration: 'none', color: 'fg.default', _hover: { bg: 'bg.muted' },
            })}
          >
            <div>
              <p class={css({ fontSize: 'sm', fontWeight: 'medium' })}>Order #{order.display_id}</p>
              <p class={css({ fontSize: 'xs', color: 'fg.muted' })}>{new Date(order.created_at).toLocaleDateString()}</p>
            </div>
            <div class={css({ textAlign: 'right' })}>
              <p class={css({ fontSize: 'sm', fontWeight: 'medium' })}>
                {convertToLocale({ amount: order.total ?? 0, currency_code: order.currency_code })}
              </p>
              <p class={css({ fontSize: 'xs', color: 'fg.muted' })}>
                {order.items?.length || 0} item{(order.items?.length || 0) !== 1 ? 's' : ''}
              </p>
            </div>
          </a>
        ))}
      </div>
    )}
  </div>
</div>
