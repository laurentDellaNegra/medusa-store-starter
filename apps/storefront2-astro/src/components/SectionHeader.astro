---
interface Props {
  tag: string;
  title: string;
  description?: string;
  centered?: boolean;
}

const { tag, title, description, centered = false } = Astro.props;
---

<div class:list={["section-header", { "section-header--centered": centered }]}>
  <p class="section-header__tag reveal">{tag}</p>
  <h2 class="section-header__title reveal reveal-delay-1" set:html={title} />
  {description && <p class="section-header__desc reveal reveal-delay-2">{description}</p>}
</div>

<style>
  .section-header {
    margin-bottom: 5rem;
  }

  .section-header--centered {
    text-align: center;
  }

  .section-header__tag {
    font-size: var(--fs-sm);
    letter-spacing: var(--ls-ultra);
    text-transform: uppercase;
    color: var(--color-gold);
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    font-weight: var(--fw-regular);
  }

  .section-header__tag::before {
    content: "";
    width: 30px;
    height: 1px;
    background: var(--color-gold);
  }

  .section-header--centered .section-header__tag {
    justify-content: center;
  }

  .section-header__title {
    font-family: var(--font-display);
    font-size: var(--fs-heading-xl);
    font-weight: var(--fw-light);
    line-height: var(--lh-snug);
    margin-bottom: 2rem;
  }

  .section-header__title :global(em) {
    font-style: italic;
    color: var(--color-gold);
  }

  .section-header__desc {
    font-size: var(--fs-body);
    line-height: var(--lh-loose);
    color: var(--color-espresso-soft);
  }
</style>
