---
interface Props {
  size?: "sm" | "md";
  value?: number;
  /** ID prefix for minus/value/plus elements (e.g. "qty" â†’ #qtyMinus, #qtyVal, #qtyPlus) */
  id?: string;
}

const { size = "md", value = 1, id = "qty" } = Astro.props;
const sizeClass = `qty-control--${size}`;
---

<div class={`qty-control ${sizeClass}`}>
  <button class="qty-btn" id={`${id}Minus`}>&minus;</button>
  <input type="text" class="qty-val" id={`${id}Val`} value={String(value)} readonly aria-label="Quantity" />
  <button class="qty-btn" id={`${id}Plus`}>+</button>
</div>
