---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import Marquee from "../components/Marquee.astro";
import AboutSection from "../components/AboutSection.astro";
import CollectionPreview from "../components/CollectionPreview.astro";
import ValuesSection from "../components/ValuesSection.astro";
import Testimonial from "../components/Testimonial.astro";
import Newsletter from "../components/Newsletter.astro";

const marqueeItems = [
  "Handwoven",
  "Sustainable",
  "Madagascar",
  "Artisanal",
  "Luxury",
  "Raphia",
  "Ethical",
  "Timeless",
];

const testimonials = [
  {
    text: "The most exquisite bag I have ever owned. You can feel the soul of Madagascar in every woven strand.",
    author: "— Isabelle M., Geneva",
  },
  {
    text: "I receive compliments every time I carry my Rafia tote. The craftsmanship is extraordinary.",
    author: "— Chloé D., Zurich",
  },
  {
    text: "Finally, a luxury brand that prioritises both beauty and conscience. It only grows more beautiful with time.",
    author: "— Sophie L., Lausanne",
  },
];
---

<BaseLayout title="Rafia — Artisanal Raphia Bags from Madagascar">
  <Hero />
  <Marquee items={marqueeItems} />
  <AboutSection />
  <CollectionPreview />
  <ValuesSection />
  <Testimonial testimonials={testimonials} />
  <Newsletter />
</BaseLayout>
