---
interface Props {
  iconSvg: string;
  title: string;
  description: string;
  delay?: number;
}

const { iconSvg, title, description, delay = 0 } = Astro.props;
const revealClass = delay > 0 ? `reveal reveal-delay-${delay}` : "reveal";
---

<div class={`value-card ${revealClass}`}>
  <div class="value-card__icon" set:html={iconSvg} />
  <h3 class="value-card__title">{title}</h3>
  <p class="value-card__desc">{description}</p>
</div>

<style>
  .value-card {
    padding: 3rem;
    border: 1px solid var(--color-sand);
    transition: all 0.5s ease;
    position: relative;
    overflow: hidden;
  }

  .value-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: var(--color-gold);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.5s ease;
  }

  .value-card:hover {
    border-color: var(--color-gold-light);
    box-shadow: var(--shadow-card-hover);
  }

  .value-card:hover::before {
    transform: scaleX(1);
  }

  .value-card__icon {
    width: 48px;
    height: 48px;
    margin-bottom: 2rem;
    color: var(--color-gold);
  }

  .value-card__title {
    font-family: var(--font-display);
    font-size: var(--fs-heading-md);
    font-weight: var(--fw-regular);
    margin-bottom: 1rem;
  }

  .value-card__desc {
    font-size: var(--fs-body-sm);
    line-height: var(--lh-relaxed);
    color: var(--color-espresso-soft);
  }
</style>
