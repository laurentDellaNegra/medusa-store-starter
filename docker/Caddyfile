{$DOMAIN:localhost} {
	# Medusa backend API routes
	handle /admin* {
		reverse_proxy backend:9000
	}
	# Admin dashboard (served at /admin-app â€” /admin is a reserved API path)
	handle /admin-app* {
		reverse_proxy backend:9000
	}
	handle /store* {
		reverse_proxy backend:9000
	}
	handle /auth* {
		reverse_proxy backend:9000
	}
	handle /hooks* {
		reverse_proxy backend:9000
	}
	handle /.well-known* {
		reverse_proxy backend:9000
	}
	handle /health* {
		reverse_proxy backend:9000
	}

	# Everything else goes to the storefront
	handle {
		reverse_proxy storefront:8001
	}
}
