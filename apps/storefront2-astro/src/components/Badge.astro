---
interface Props {
  text: string;
  size?: "sm" | "md";
}

const { text, size = "sm" } = Astro.props;
---

<span class:list={["badge", `badge--${size}`]}>{text}</span>

<style>
  .badge {
    position: absolute;
    background: rgba(255, 252, 247, 0.9);
    backdrop-filter: blur(10px);
    font-size: 0.6rem;
    letter-spacing: var(--ls-wider);
    text-transform: uppercase;
    color: var(--color-gold-text);
    z-index: var(--z-content);
  }

  .badge--sm {
    top: 1.2rem;
    left: 1.2rem;
    padding: 0.4rem 1rem;
  }

  .badge--md {
    top: 1.5rem;
    left: 1.5rem;
    padding: 0.5rem 1.2rem;
  }
</style>
